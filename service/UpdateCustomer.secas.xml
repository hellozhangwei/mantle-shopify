<?xml version="1.0" encoding="UTF-8"?>
<secas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-eca-2.1.xsd">
    <seca id="CustomerUpdate" service="update#mantle.party.Person" when="post-service" run-on-error="false">
        <actions>
            <entity-find-one entity-name="mantle.party.Person" value-field="person"/>
            <service-call name="mantle.shopify.ApiServices.queue#UpdateCustomerSystemMessage"  in-map="[partyId:person.partyId]" out-map="context"/>
        </actions>
    </seca>
    <seca id="CustomerEmailUpdate" service="create#mantle.party.contact.ContactMech" when="post-service" run-on-error="false">
        <actions>
            <entity-find-one entity-name="mantle.party.contact.ContactMech" value-field="contactMech"/>
            <entity-find-one entity-name="mantle.party.contact.PartyContactMech" value-field="partyContactMech">
                <field-map field-name="contactMechId" from="contactMech.contactMechId" />
            </entity-find-one>
            <service-call name="mantle.shopify.ApiServices.queue#UpdateCustomerSystemMessage"  in-map="[partyId:person.partyId]" out-map="context"/>
        </actions>
    </seca>
    <seca id="CustomerEmailUpdate2" service="update#mantle.party.contact.ContactMech" when="post-service" run-on-error="false">
        <actions>
            <entity-find-one entity-name="mantle.party.contact.ContactMech" value-field="contactMech"/>
            <entity-find-one entity-name="mantle.party.contact.PartyContactMech" value-field="partyContactMech">
                <field-map field-name="contactMechId" from="contactMech.contactMechId" />
            </entity-find-one>
            <service-call name="mantle.shopify.ApiServices.queue#UpdateCustomerSystemMessage"  in-map="[partyId:person.partyId]" out-map="context"/>
        </actions>
    </seca>
    <seca id="CustomerUpdateTelecomNumber" service="mantle.party.ContactServices.store#PartyContactInfo" when="post-service">
        <actions>
            <service-call name="mantle.shopify.ApiServices.queue#UpdateCustomerSystemMessage"  in-map="[partyId:partyId]" out-map="context"/>
        </actions>
    </seca>
</secas>